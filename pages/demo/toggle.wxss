.status-btns {
  display: flex;
  flex-direction: row;
  margin: 10px 20%;
  width: 60%;
  background-color: #03BD70;
  padding: 10px 0;
  border-radius: 5px;
  box-shadow: 0 5px 10px -5px #03BD70;
}
.item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item > text {
  color: #FFF;
  font-size: 14px;
}
.item-spacer {
  height: 20px;
  width: 1px;
  background-color: rgba(255, 255, 255, 0.5);
}
.item-hover > text {
  color: #CCC;
}

.status-box {
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.status-box > text:first-of-type {
  font-size: 14px;
  font-weight: 300;
  color: #666;
}
.status-box > text:last-of-type {
  font-size: 22px;
  font-weight: 400;
  color: #333;
  margin-top: 10px;
}